        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:left="5dp" android:right="100dp">
                <shape>
                    <corners android:topLeftRadius="10dp" android:topRightRadius="10dp" />
