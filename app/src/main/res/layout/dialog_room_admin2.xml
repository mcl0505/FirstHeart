<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="33dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_room_dialog_round20"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="33dp">

            <TextView
                android:id="@+id/imgJubao"
                android:layout_width="45dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_room_dialog_round11"
                android:gravity="center"
                android:text="举报"
                android:textColor="#BD4AFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/imgHome"
                android:layout_width="45dp"
                android:layout_height="23dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_room_dialog_round11"
                android:gravity="center"
                android:text="主页"
                android:textColor="#BD4AFF"
                android:textSize="12sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="用户"
                        android:textColor="@color/font_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/selector_home_sex" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/font_999999"
                        android:textSize="14sp"
                        tools:text="ID:xxxx" />

                    <TextView
                        android:id="@+id/textFenNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="0"
                        android:textColor="@color/font_999999"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgVip"
                        android:layout_width="42dp"
                        android:layout_height="17dp"
                        android:visibility="gone"
                        android:layout_marginLeft="3dp"  />

                    <ImageView
                        android:id="@+id/imgJinrui"
                        android:layout_width="42dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="6dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/huizhang" />

                    <ImageView
                        android:id="@+id/imgXingrui"
                        android:layout_width="42dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="6dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/huizhang" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDialogXiamai"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/user_card_xiamai"
                android:gravity="center"
                android:text="下麦"
                android:textColor="@color/coloe_666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textDialogBimai"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/user_card_bimai"
                android:gravity="center"
                android:text="闭麦"
                android:textColor="@color/coloe_666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textDialogJinyan"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/user_card_jinyan"
                android:gravity="center"
                android:text="禁言"
                android:textColor="@color/coloe_666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textDialogTichu"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/user_card_tichu"
                android:gravity="center"
                android:text="踢出房间"
                android:textColor="@color/coloe_666666"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_clear_meilizhi"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/user_card_meilizhi"
                android:gravity="center"
                android:text="清空魅力值"
                android:textColor="@color/font_666666"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/textDialogGuanzhu"
                    android:layout_width="130dp"
                    android:layout_height="33dp"
                    android:background="@drawable/jianbian_room_guanzhu"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/textDialogSongli"
                    android:layout_width="130dp"
                    android:layout_height="33dp"
                    android:background="@drawable/jianbian_room_songliwu"
                    android:gravity="center"
                    android:text="送礼"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img1"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:scaleType="centerCrop"
        app:riv_border_color="@color/white"
        app:riv_border_width="8dp"
        app:riv_corner_radius="33dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/no_tou" />

</FrameLayout>
