<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.mine.BindSuccessActivity">

    <include layout="@layout/include_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <com.konglianyuyin.mx.app.view.CircularImage
        android:id="@+id/head_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝昵称："
            android:textColor="@color/coloe_666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/nack_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_333333"
            android:textSize="12sp" />
    </LinearLayout>

    <com.konglianyuyin.mx.view.ShapeTextView
        android:id="@+id/untying"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="42dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text="解绑"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornersRadius="23dp"
        app:solidNormal="@color/app_bg_bottom" />
</LinearLayout>