<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg_10"
    android:orientation="vertical">
    <TextView
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/tvTitle"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff333333"
        android:textSize="18sp"
        />

    <TextView
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:lineHeight="23dp"
        android:id="@+id/reason_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text=""
        android:textColor="@color/font_999999"
        android:textSize="16sp" />

    <View style="@style/gray_line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/font_999999"
            android:textSize="15sp" />

        <View style="@style/gray_line_vertical" />

        <TextView
            android:id="@+id/conform_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#ba81ff"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>