<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/include_title" />

    <ImageView
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/edt_login_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="@color/font_dddddd"
            android:textColor="@color/font_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textSend"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/app_bg"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/oneline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/line" />

    <com.konglianyuyin.mx.view.ClearEditText
        android:id="@+id/edt_login_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@null"
        android:hint="请输入验证码"
        android:inputType="number"
        android:textColor="@color/font_333333"
        android:textColorHint="@color/font_dddddd"
        android:textSize="14sp" />

    <View
        android:id="@+id/twoline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/line" />


    <com.konglianyuyin.mx.view.ShapeTextView
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornersRadius="50dp"
        app:bl_enabled_drawable="@color/app_bg"
        app:bl_unEnabled_drawable="@color/app_bg_a"
        app:solidNormal="@color/app_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp">

        <TextView
            android:id="@+id/textForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/app_bg"
            android:textSize="13sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/textpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号密码登录"
            android:textColor="@color/app_bg"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/textRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="立即注册"
            android:textColor="@color/app_bg"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:text="快捷登录"
        android:textColor="@color/font_999999"
        android:textSize="13sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/dsf_denglu_qq" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/dsf_denglu_vx" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/dsf_denglu_wb" />

        <!--<ImageView-->
        <!--android:id="@+id/img4"-->
        <!--android:layout_weight="1"-->
        <!--android:src="@mipmap/dsf_denglu_zfb"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/iv_agree"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_check_normal"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本人已阅读并同意《用户协议》,《隐私协议》承诺使用APP期间遵守以上协议。"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>

