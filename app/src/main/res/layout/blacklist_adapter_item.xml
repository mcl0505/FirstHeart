<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <com.konglianyuyin.mx.app.view.CircularImage
        android:id="@+id/blacklist_head_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/blacklist_head_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/blacklist_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2222"
            android:textColor="@color/font_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/blacklist_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textColor="@color/font_999999"
            android:textSize="12sp" />
    </LinearLayout>

    <com.konglianyuyin.mx.view.ShapeTextView
        android:id="@+id/cleanUp"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="移除黑名单"
        android:textColor="@color/white"
        app:cornersRadius="15dp"
        app:solidNormal="@color/app_bg_bottom" />
</RelativeLayout>