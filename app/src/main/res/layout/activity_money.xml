<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.mine.MoneyActivity">

    <View
        android:id="@+id/view_empty_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary" />

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:background="@mipmap/wallet_mizuan_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的灵石"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textZuanNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="" />

        <TextView
            android:id="@+id/imgCHongzhi"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_my_bai"
            android:gravity="center"
            android:padding="5dp"
            android:text="充值"
            android:textSize="@dimen/txt_size_12" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@mipmap/wallet_mibi_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钻石余额"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textBiNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/imgTixian"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_my_bai"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="提现"
                    android:textSize="@dimen/txt_size_12" />

                <TextView
                    android:id="@+id/imgDuihuan"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/shape_my_bai"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="兑换"
                    android:textSize="@dimen/txt_size_12" />

                <TextView
                    android:id="@+id/imgZengSong"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/shape_my_bai"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="赠送"
                    android:textSize="@dimen/txt_size_12" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgJilu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/wallet_mibi_jilu" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llBang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="12dp"
        android:background="@mipmap/zfb_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="支付宝"
            android:textColor="@color/font_999999"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textAliName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/font_333333"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/home_tuijian_gengduo" />
    </LinearLayout>
</LinearLayout>