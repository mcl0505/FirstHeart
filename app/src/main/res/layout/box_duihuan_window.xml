<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="513dp"
    android:layout_gravity="center"
    android:background="@mipmap/live_home_dia_bg1"
    android:orientation="vertical"
    android:paddingTop="19dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="18dp"
            android:text="奖池"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_18" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/live_home_dia_close" />
    </RelativeLayout>

    <LinearLayout
        android:minHeight="444dp"
        android:id="@+id/sm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@mipmap/live_home_dia_bg2"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:padding="15dp"
            app:bl_corners_bottomLeftRadius="7dp"
            app:bl_corners_bottomRightRadius="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_duihuan"
                android:layout_width="140dp"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/dia_bg_duihuan"
                android:gravity="center"
                android:text="兑换"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="#FFFEFEFE"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>