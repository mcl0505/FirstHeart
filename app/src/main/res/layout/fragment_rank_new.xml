<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_top1"
            android:layout_width="97dp"
            android:layout_height="37dp"
            android:src="@drawable/list_day_sel" />

        <ImageView
            android:id="@+id/btn_top2"
            android:layout_width="97dp"
            android:layout_height="37dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/list_week_nol" />

        <ImageView
            android:id="@+id/btn_top3"
            android:layout_width="97dp"
            android:layout_height="37dp"
            android:src="@drawable/list_zong_nol" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="25dp">

        <RelativeLayout
            android:id="@+id/rl_two"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_white_top_10">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_top_left" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_top_two"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:src="@mipmap/no_tou"
                app:riv_corner_radius="50dp" />

            <ImageView
                android:id="@+id/bg_head_two"
                android:layout_width="84.5dp"
                android:layout_height="73.5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/bg_top_2" />

            <TextView
                android:id="@+id/nick_top_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bg_head_two"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="#222222"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nick_top_two"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:src="@drawable/list_heart_sei" />

                <TextView
                    android:id="@+id/num_top_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="0"
                    android:textColor="#F03838"
                    android:textSize="10dp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_three"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_white_top_10">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_top_right" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_top_three"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:src="@mipmap/no_tou"
                app:riv_corner_radius="50dp" />

            <ImageView
                android:id="@+id/bg_head_three"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:src="@drawable/bg_top_3" />

            <TextView
                android:id="@+id/nick_top_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bg_head_three"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="#222222"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nick_top_three"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:src="@drawable/list_heart_sei" />

                <TextView
                    android:id="@+id/num_top_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="0"
                    android:textColor="#F03838"
                    android:textSize="10dp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_white_top_10">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_top_one"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:src="@mipmap/no_tou"
                app:riv_corner_radius="50dp" />

            <ImageView
                android:id="@+id/bg_head_one"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:src="@drawable/bg_top_1" />

            <TextView
                android:id="@+id/nick_top_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bg_head_one"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="#222222"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nick_top_one"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:src="@drawable/list_heart_sei" />

                <TextView
                    android:id="@+id/num_top_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="0"
                    android:textColor="#F03838"
                    android:textSize="10dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@color/white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/rank_tm" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_white_top_10" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rank_top3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/no_data"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/rank_nodataaaa" />

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eee"/>

            <TextView
                android:layout_marginStart="14dp"
                android:id="@+id/tv_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#222222"
                android:textSize="15dp" />

            <com.konglianyuyin.mx.app.view.CircularImage
                android:id="@+id/ci_head"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_index"
                android:src="@mipmap/gender_zhuce_girl" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ci_head"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLength="10"
                android:text=""
                android:textColor="#222222"
                android:textSize="15dp" />

            <ImageView
                android:layout_marginEnd="14dp"
                android:id="@+id/iv_heat"
                android:layout_width="12dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/list_heart_sei" />

            <TextView
                android:id="@+id/tv_me_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_heat"
                android:text=""
                android:layout_marginEnd="10dp"
                android:textColor="#F03838"
                android:textSize="14dp" />

            <View
                android:layout_below="@+id/ci_head"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eee"/>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>