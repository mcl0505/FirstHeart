<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rootView"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/boxBg"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        android:src="@mipmap/icon_box_img_1"
        app:riv_corner_radius="12dp"
        android:scaleType="centerCrop"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/boxTop"
        app:layout_constraintBottom_toTopOf="@id/boxBtn1"
        app:layout_constraintStart_toEndOf="@id/llDes"
        app:layout_constraintEnd_toEndOf="@id/boxBg"
        android:layout_marginVertical="20dp"/>

    <ImageView
        android:id="@+id/boxClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="12dp"
        android:src="@mipmap/icon_box_close"
        app:layout_constraintTop_toTopOf="@id/boxBg"
        app:layout_constraintBottom_toTopOf="@id/boxBg"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/boxTop"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@mipmap/icon_box_top"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@id/boxBg"
        app:layout_constraintEnd_toEndOf="@id/boxBg"
        app:layout_constraintTop_toTopOf="@id/boxBg"
        app:layout_constraintBottom_toTopOf="@id/boxBg"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/boxBg"
        app:layout_constraintTop_toBottomOf="@id/boxBtn1"
        android:paddingLeft="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_qbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/room_gift_mizuan_big"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_chongzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:text="充值>"
            android:textColor="#FE4C4A"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/boxTab1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="黄金海岸"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:tag="1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/boxBg"
        app:layout_constraintTop_toBottomOf="@id/boxBg"
        android:background="@mipmap/icon_box_tab_bg"/>
    <TextView
        android:id="@+id/boxTab2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="神秘海域"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:tag="2"
        app:layout_constraintStart_toEndOf="@id/boxTab1"
        app:layout_constraintEnd_toStartOf="@id/boxTab3"
        app:layout_constraintTop_toBottomOf="@id/boxBg"
        android:background="@mipmap/icon_box_tab_bg"/>
    <TextView
        android:id="@+id/boxTab3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="深海遨游"
        android:gravity="center"
        android:tag="3"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/boxBg"
        app:layout_constraintTop_toBottomOf="@id/boxBg"
        android:background="@mipmap/icon_box_tab_bg"/>

    <LinearLayout
        android:id="@+id/boxBtn1"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="@id/boxBg"
        app:layout_constraintBottom_toBottomOf="@id/boxBg"
        android:gravity="center_horizontal"
        android:layout_marginBottom="60dp"
        android:tag="1"
        android:background="@mipmap/icon_box_btn_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="抽一次"/>
        <TextView
            android:id="@+id/boxBtnNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/boxBtn2"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:orientation="vertical"
        android:tag="10"
        app:layout_constraintStart_toEndOf="@id/boxBtn1"
        app:layout_constraintEnd_toStartOf="@id/boxBtn3"
        app:layout_constraintBottom_toBottomOf="@id/boxBtn1"
        android:gravity="center_horizontal"
        android:background="@mipmap/icon_box_btn_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="抽十次"/>
        <TextView
            android:id="@+id/boxBtnNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/boxBtn3"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/boxBg"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="@id/boxBg"
        android:gravity="center_horizontal"
        android:layout_marginBottom="60dp"
        android:tag="100"
        android:background="@mipmap/icon_box_btn_3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="抽百次"/>
        <TextView
            android:id="@+id/boxBtnNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/boxBg"
        app:layout_constraintTop_toTopOf="@id/boxBg"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/boxDes1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@mipmap/icon_box_des_bg"
            android:text="手气榜"
            android:textColor="#3383A6"
            android:gravity="center"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/boxDes2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@mipmap/icon_box_des_bg"
            android:text="奖池"
            android:textColor="#3383A6"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/boxDes3"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@mipmap/icon_box_des_bg"
            android:text="规则"
            android:textColor="#3383A6"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textSize="14sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>