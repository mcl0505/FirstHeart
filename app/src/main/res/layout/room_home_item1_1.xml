<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    tools:showIn="@layout/activity_admin_home_1">

    <RelativeLayout
        android:id="@+id/rl_mmmm"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true">

        <com.opensource.svgaplayer.SVGAImageView
            android:id="@+id/imgQuanZhu"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"/>

        <com.konglianyuyin.mx.view.RippleView
            android:id="@+id/wave_zhu"
            style="@style/wave_style_center" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgRoom"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/user_header"
            app:riv_border_color="@color/font_89E0FB"
            app:riv_border_width="2dp"
            app:riv_corner_radius="180dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_txk_zhu"
                style="@style/txk_style" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgRoomVedio"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:layout_alignRight="@id/imgRoom"
            android:layout_alignBottom="@id/imgRoom"
            android:src="@drawable/selector_room_header_bimai"
            android:visibility="gone" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:id="@+id/meili_1"
            android:layout_width="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="14dp"
            android:background="@drawable/jianbian_meilizhi_7"
            android:gravity="center"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="11sp" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgRoom"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <com.konglianyuyin.mx.view.ShapeTextView
                android:id="@+id/textLayout"
                android:layout_width="30dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="离开"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                app:cornersRadius="50dp"
                app:solidNormal="@color/font_4d000000" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgRoomGif"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/jianbian_meilizhi_8"
            android:textSize="8dp"
            android:text="主播"/>

        <TextView
            android:id="@+id/textRoom"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="26"
            android:maxLines="1"
            android:text="主持位"
            android:textColor="@color/white"
            android:textSize="10dp" />

    </LinearLayout>

    <!--<LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="13dp"
            android:id="@+id/imgMusic"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/shape_room_sssssssss"
            android:drawableLeft="@mipmap/room_dibu_yinyue"
            android:gravity="center"
            android:minWidth="72dp"
            android:paddingLeft="@dimen/dp_10"
            android:text="音乐"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_12" />
    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/ll_hot_num"
        android:layout_marginTop="15dp"
        android:layout_marginStart="45dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:background="@drawable/bg_hot22">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:src="@drawable/hot_ic"/>

        <!--<TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/meili_1"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="5612"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>-->

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/textNum"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="5612"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>

    </LinearLayout>

    <TextView
        android:layout_alignLeft="@+id/ll_hot_num"
        android:layout_below="@+id/ll_hot_num"
        android:id="@+id/imgPaihang"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_room_s1"
        android:drawableLeft="@drawable/list_img_icbang1"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:text="排行榜"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_12" />

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/imgRight"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:background="@drawable/bg_room_gg"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="11dp"
            android:src="@drawable/gonggao" />

        <TextView
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="房间公告"/>
    </LinearLayout>

</RelativeLayout>