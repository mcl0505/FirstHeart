<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Chronometer
        android:id="@+id/sound_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sound_btn"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:textColor="@color/font_333333"
        android:textSize="12sp"
        android:visibility="invisible" />


    <ImageButton
        android:id="@+id/sound_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/sound_btn"
        android:background="@color/colorTransparent"
        android:src="@mipmap/fabu_luyin_quxiao"
        android:visibility="invisible" />

    <com.konglianyuyin.mx.view.CircleProgressImageView
        android:id="@+id/sound_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="@color/colorTransparent" />

    <ImageButton
        android:id="@+id/sound_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/sound_btn"
        android:background="@color/colorTransparent"
        android:src="@mipmap/fabu_luyin_queding"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/sound_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sound_btn"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:text="点击录音"
        android:textColor="@color/font_999999"
        android:textSize="12sp" />

</RelativeLayout>