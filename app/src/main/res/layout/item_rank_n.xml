<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="14dp"
    android:paddingTop="8dp"
    android:paddingEnd="14dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1"
        android:textColor="#222222"
        android:textSize="15dp" />

    <com.konglianyuyin.mx.app.view.CircularImage
        android:id="@+id/ci_head"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_index"
        android:src="@mipmap/gender_zhuce_girl" />

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ci_head"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLength="10"
        android:text="半只西瓜"
        android:textColor="#222222"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/iv_heat"
        android:layout_width="12dp"
        android:layout_height="10dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/list_heart_sei" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_heat"
        android:text="半只西瓜"
        android:visibility="gone"
        android:layout_marginEnd="10dp"
        android:textColor="#F03838"
        android:textSize="14dp" />

</RelativeLayout>