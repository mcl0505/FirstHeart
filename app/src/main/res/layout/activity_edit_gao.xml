<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".activity.EditGaoActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:contentInsetStart="0dp"
        >

        <RelativeLayout
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_arrow_back_white_24dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/font_333333"
            android:textSize="18sp"
            android:text="房间公告"/>



        <com.konglianyuyin.mx.view.ShapeTextView
            android:id="@+id/rightConfirm"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="完成"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornersRadius="50dp"
            android:visibility="visible"
            app:solidNormal="@color/app_bg_bottom" />

    </android.support.v7.widget.Toolbar>
    
    
    <EditText
        android:id="@+id/editName"
        android:hint="写点什么吧..."
        android:gravity="top"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="@dimen/txt_size_12"
        android:background="@drawable/shape_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="250dp" />


</LinearLayout>