<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_room_round"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <com.konglianyuyin.mx.app.view.CircularImage
            android:id="@+id/img_head_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/default_home"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/room_cp_tc"
            />
        <com.konglianyuyin.mx.app.view.CircularImage
            android:id="@+id/img_head_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/default_home"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_who_want_cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/txt_size_12"
        android:textColor="@color/font_333333"
        android:text="XXX想与你组成守护CP"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="17dp"
        android:background="@color/font_eeeeee"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@color/font_333333"
            android:text="拒绝"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/font_eeeeee"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            ></View>
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/txt_size_14"
            android:textColor="@color/font_333333"
            android:text="同意"
            />
    </LinearLayout>

</LinearLayout>
