<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ohuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="13dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bj"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRi"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_rank"
                android:gravity="center"
                android:text="日榜"
                android:textColor="@color/panghang_text_selector"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textZhou"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/selector_rank"
                android:gravity="center"
                android:text="周榜"
                android:textColor="@color/panghang_text_selector"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textYue"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/selector_rank"
                android:gravity="center"
                android:text="月榜"
                android:textColor="@color/panghang_text_selector"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:layout_below="@id/ohuo" />


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradual"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="小小A"
            android:textColor="@color/font_333333"
            android:textSize="16sp" />

        <com.konglianyuyin.mx.app.view.CircularImage
            android:id="@+id/ci_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:src="@mipmap/gender_zhuce_girl" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawablePadding="5dp"
                android:text="小小A"
                android:textColor="@color/font_333333"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="14dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/my_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/my_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/me_cf_tit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="财富值"
                android:textColor="@color/font_333333"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/textNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="512355"
                android:textColor="@color/font_ff3e6d"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

