<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="46dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11" />

    <RelativeLayout
        android:id="@+id/monomer_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/my_package_shape_two"
        android:visibility="visible">

        <TextView
            android:id="@+id/pack_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11dp"
            android:text="vip5"
            android:textColor="@color/font_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pack_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pack_name_text"
            android:layout_alignLeft="@id/pack_name_text"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="11dp"
            android:text="2019_02-11"
            android:textColor="@color/font_666666"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pack_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pack_name_text"
            android:layout_alignLeft="@id/pack_name_text"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="11dp"

            android:textColor="@color/font_666666"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/pack_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/pack_num_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/pack_num_text"

            android:textColor="@color/font_666666"
            android:textSize="10sp" />

        <com.konglianyuyin.mx.view.ShapeTextView
            android:id="@+id/ok_btn"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="装扮"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:cornersRadius="13dp"
            app:solidNormal="@color/font_ff3e6d" />

        <com.konglianyuyin.mx.view.ShapeTextView
            android:id="@+id/ok_btn_two"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="兑换"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:cornersRadius="13dp"
            app:solidNormal="@color/font_ff3e6d" />
    </RelativeLayout>
</LinearLayout>
