<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/guan_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:padding="3dp"
        android:src="@mipmap/tc_cha" />

    <com.konglianyuyin.mx.app.view.CircularImage
        android:id="@+id/head_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="房间已上锁，请输入密码。"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <com.konglianyuyin.mx.utils.PwdEditText
        android:id="@+id/pwd_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        app:checkedColor="@color/font_ff3e6d"
        app:circle="5dp"
        app:defaultColor="@color/font_eeeeee"
        app:space="19dp"
        app:textColor="@color/font_ff3e6d"
        app:textLength="4" />

    <TextView
        android:id="@+id/error_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="24dp"
        android:text="密码错误，请重新输入。"
        android:textColor="@color/color_FB2544"
        android:textSize="10sp"
        android:visibility="invisible" />
</LinearLayout>