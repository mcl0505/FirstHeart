<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rcv_rank_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/tou2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <com.konglianyuyin.mx.app.view.CircularImage
                    android:id="@+id/img2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/no_tou"
                    app:layout_constraintBottom_toBottomOf="@id/head_image_kuang2"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHorizontal_bias="0.66"
                    app:layout_constraintLeft_toLeftOf="@id/head_image_kuang2"
                    app:layout_constraintRight_toRightOf="@id/head_image_kuang2"
                    app:layout_constraintTop_toTopOf="@id/head_image_kuang2"
                    app:layout_constraintVertical_bias="0.78"
                    app:layout_constraintWidth_default="percent" />

                <ImageView
                    android:id="@+id/head_image_kuang2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/home_phb_two"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tou2"
                android:lines="1"
                android:ellipsize="end"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="小小酥"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/sex2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_below="@id/tou2"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/textName2"
                android:src="@mipmap/gender_boy" />


            <TextView
                android:id="@+id/textDec2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textName2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="77777"
                android:textColor="@color/color_FFBA1C"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_below="@id/textDec2"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/home_phb_er" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:src="@mipmap/home_phb_guang" />-->

            <android.support.constraint.ConstraintLayout
                android:id="@+id/tou1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <com.konglianyuyin.mx.app.view.CircularImage
                    android:id="@+id/img1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/no_tou"
                    app:layout_constraintBottom_toBottomOf="@id/head_image_kuang"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHorizontal_bias="0.75"
                    app:layout_constraintLeft_toLeftOf="@id/head_image_kuang"
                    app:layout_constraintRight_toRightOf="@id/head_image_kuang"
                    app:layout_constraintTop_toTopOf="@id/head_image_kuang"
                    app:layout_constraintVertical_bias="0.85"
                    app:layout_constraintWidth_default="percent" />

                <ImageView
                    android:id="@+id/head_image_kuang"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/home_phb_one"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textName1"
                android:layout_width="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_below="@id/tou1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="小小酥"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/sex1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_below="@id/tou1"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/textName1"
                android:src="@mipmap/gender_boy" />

            <TextView
                android:id="@+id/textDec1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textName1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="77777"
                android:textColor="@color/color_FFBA1C"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:layout_below="@id/textDec1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                android:src="@mipmap/home_phb_yi" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/tou3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp">

                <com.konglianyuyin.mx.app.view.CircularImage
                    android:id="@+id/img3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/no_tou"
                    app:layout_constraintBottom_toBottomOf="@id/head_image_kuang3"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHorizontal_bias="0.66"
                    app:layout_constraintLeft_toLeftOf="@id/head_image_kuang3"
                    app:layout_constraintRight_toRightOf="@id/head_image_kuang3"
                    app:layout_constraintTop_toTopOf="@id/head_image_kuang3"
                    app:layout_constraintVertical_bias="0.78"
                    app:layout_constraintWidth_default="percent" />

                <ImageView
                    android:id="@+id/head_image_kuang3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/home_phb_three"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textName3"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tou3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="小小酥"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/sex3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_below="@id/tou3"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/textName3"
                android:src="@mipmap/gender_boy" />

            <TextView
                android:id="@+id/textDec3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textName3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="77777"
                android:textColor="@color/color_FFBA1C"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_below="@id/textDec3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:scaleType="fitXY"
                android:src="@mipmap/home_phb_san" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>