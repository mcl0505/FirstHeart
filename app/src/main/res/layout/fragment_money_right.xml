<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/myzushi">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="我的钻石"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_15" />

        <TextView
            android:id="@+id/textBiNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="26dp"
            tools:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imgTixian"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_my_bai1"
                android:gravity="center"
                android:padding="5dp"
                android:text="提现"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12" />

            <TextView
                android:id="@+id/imgJilu"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_my_bai1"
                android:gravity="center"
                android:padding="5dp"
                android:text="记录"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_12" />

            <TextView
                android:id="@+id/imgDuihuan"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_my_bai"
                android:gravity="center"
                android:padding="5dp"
                android:text="兑换"
                android:textColor="#A07228"
                android:textSize="@dimen/txt_size_12" />


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llBang"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_hui_bg10"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="支付宝"
            android:textColor="@color/font_999999"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textAliName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/font_333333"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/home_tuijian_gengduo" />
    </LinearLayout>

</LinearLayout>