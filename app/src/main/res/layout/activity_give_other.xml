<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="@color/font_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="@color/coloe_666666"
            android:textSize="@dimen/txt_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="转赠灵石数量"
            android:textColor="@color/font_333333"
            android:textSize="14sp" />

        <com.konglianyuyin.mx.view.ClearEditText
            android:id="@+id/edt_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:inputType="numberDecimal"
            android:textColor="@color/font_333333"
            android:textColorHint="@color/font_dddddd"
            android:textSize="27sp" />

        <View
            android:id="@+id/twoline"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line" />

        <TextView
            android:id="@+id/tv_all_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="余额120.00钻石"
            android:textColor="@color/coloe_666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/shape_my_zhuanzeng_no"
            android:gravity="center"
            android:text="确认转赠"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>